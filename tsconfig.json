{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    }
  },
}
